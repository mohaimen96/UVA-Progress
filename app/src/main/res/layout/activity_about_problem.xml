<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.example.uhunt.sample1.AboutProblem">

    <TextView
        android:id="@+id/pid"
        android:textColor="#ffeded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="108dp"
        android:textSize="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/verdict"
        android:textColor="#ffeded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pid"
        android:layout_below="@+id/pid"
        android:layout_marginTop="19dp"
        android:textSize="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/rank"
        android:textColor="#ffeded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/verdict"
        android:layout_below="@+id/verdict"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/lang"
        android:textColor="#ffeded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rank"
        android:layout_below="@+id/rank"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/run"
        android:textColor="#ffeded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lang"
        android:layout_below="@+id/lang"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/mem"
        android:textColor="#ffeded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/run"
        android:layout_below="@+id/run"
        android:layout_marginTop="19dp"
        android:text="TextView"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dacu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="See Problem" />

    <TextView
        android:id="@+id/name"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/dacu"
        android:textSize="20dp"
        android:textColor="#ffeded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mem"
        android:layout_below="@+id/mem"
        android:layout_marginTop="15dp"
        android:text="TextView" />

</RelativeLayout>
